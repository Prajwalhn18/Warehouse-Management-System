<div class="container">
  <div class="row">
 
    <div class="col-md-9">
      <h4>Product in the Warehouse</h4>
      <div class="thumbnail">
        <img class="img-responsive" src="<%= product.img_url %>" alt="" width="100", height="100">
        <div class="caption-full">
          <h4 class="pull-right"><i class="fas fa-rupee-sign"></i> <%=product.price%></h4>
          <h4><a><%= product.product_name %></a></h4>
          <p><%= product.description %></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a href="/products/buy/<%=product.product_id%>/<%=product.user_id%>" class="btn btn-primary">Request order</a>
        </div>
      </div>
    </div>
  </div>
</div>
